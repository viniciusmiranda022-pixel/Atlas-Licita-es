@model PortfolioPageVm
@{
    ViewData["Title"] = "Portfólio";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">Portfólio Microsoft (Ingram)</h3>
        <small class="text-muted">Importação CSV (MVP) com evolução futura para API</small>
    </div>
</div>

@if (TempData["Status"] is string status)
{
    <div class="alert alert-info">@status</div>
}

<div class="row g-3 mb-3">
    <div class="col-md-6">
        <form asp-action="ImportCsv" method="post" enctype="multipart/form-data" class="card shadow-sm">
            <div class="card-body">
                <label class="form-label">Importar CSV</label>
                <input type="file" class="form-control mb-2" name="file" accept=".csv" />
                <button class="btn btn-primary">Importar</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form method="get" class="card shadow-sm">
            <div class="card-body d-flex gap-2">
                <input type="text" class="form-control" name="search" value="@Model.Search" placeholder="Buscar por SKU, linha ou descrição" />
                <button class="btn btn-outline-primary">Pesquisar</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-striped mb-0 align-middle">
            <thead>
            <tr>
                <th>Vendor</th>
                <th>Linha</th>
                <th>SKU</th>
                <th>Descrição</th>
                <th>Licenciamento</th>
                <th>Preço</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Itens)
            {
                <tr>
                    <td>@item.Vendor</td>
                    <td>@item.ProductLine</td>
                    <td class="font-monospace">@item.Sku</td>
                    <td>@item.Description</td>
                    <td>@item.LicensingType</td>
                    <td>@(item.Price?.ToString("C") ?? "-")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
