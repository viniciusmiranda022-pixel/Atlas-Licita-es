@model OpportunitiesPageVm
@{
    ViewData["Title"] = "Radar PNCP";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h3 class="mb-0">Radar de licenciamento Microsoft</h3>
        <small class="text-muted">Atas e Contratações com tags automáticas (Windows, SQL, CAL, RDS...)</small>
    </div>
</div>

<form method="get" class="card shadow-sm mb-3">
    <div class="card-body row g-2">
        <div class="col-md-2"><input type="date" name="DataInicial" value="@Model.Filtros.DataInicial.ToString("yyyy-MM-dd")" class="form-control" /></div>
        <div class="col-md-2"><input type="date" name="DataFinal" value="@Model.Filtros.DataFinal.ToString("yyyy-MM-dd")" class="form-control" /></div>
        <div class="col-md-2"><input type="text" name="Cnpj" value="@Model.Filtros.Cnpj" class="form-control" placeholder="CNPJ" /></div>
        <div class="col-md-2"><input type="text" name="Uf" value="@Model.Filtros.Uf" class="form-control" placeholder="UF" /></div>
        <div class="col-md-2"><input type="text" name="CodigoModalidadeContratacao" value="@Model.Filtros.CodigoModalidadeContratacao" class="form-control" placeholder="Modalidade" /></div>
        <div class="col-md-2"><button class="btn btn-primary w-100">Buscar</button></div>
    </div>
</form>

<div class="row g-3">
@foreach (var item in Model.Itens)
{
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <span class="badge text-bg-primary">@item.SourceType</span>
                        <div class="fw-semibold mt-2">@item.Orgao</div>
                        <div class="small text-muted">@item.NumeroControle</div>
                    </div>
                    <div class="text-end small text-muted">@item.Publicacao?.ToString("dd/MM/yyyy")</div>
                </div>
                <p class="mt-3 mb-2">@item.Objeto</p>
                @foreach (var match in item.Matches)
                {
                    <span class="badge text-bg-success me-1">@match</span>
                }
            </div>
        </div>
    </div>
}
</div>
